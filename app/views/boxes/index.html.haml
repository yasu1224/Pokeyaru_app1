%nav.navbar.navbar-expand-lg.navbar-light.bg-light
  %a.navbar-brand{:href => root_path} POKEYARU
  %button.navbar-toggler{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarSupportedContent", "data-toggle" => "collapse", :type => "button"}
    %span.navbar-toggler-icon
  #navbarSupportedContent.collapse.navbar-collapse
    %ul.navbar-nav.mr-auto
      %li.nav-item
        %a.nav-link{:href => root_path} カード一覧
      %li.nav-item.active
        %a.nav-link{:href => "boxes"}
          拡張BOXから探す
          %span.sr-only (current)
      %li.nav-item
        %a.nav-link{:href => "genres"} ジャンルから探す
      %li.nav-item
        %a.nav-link{:href => "rares"} レアリティから探す
    %form.form-inline.my-2.my-lg-0
      %input.form-control.mr-sm-2{"aria-label" => "Search", :placeholder => "Search", :type => "search"}/
      %button.btn.btn-outline-success.my-2.my-sm-0{:type => "submit"} Search

%p#notice= notice
%h1 Boxes
%table
  %thead
    %tr
      %th Name
      %th Place
      %th Release
      %th{:colspan => "3"}
  %tbody
    - @boxes.each do |box|
      %tr
        %td= box.name
        %td= box.place
        %td= box.release
        %td= link_to 'Show', box
        %td= link_to 'Edit', edit_box_path(box)
        %td= link_to 'Destroy', box, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Box', new_box_path
