%p#notice= notice
%h1 Pokecas
%table
  %thead
    %tr
      %th Image
      %th Name
      %th Detail
      %th Price
      %th Box
      %th Genre
      %th Rare
      %th{:colspan => "3"}
  %tbody
    - @pokecas.each do |pokeca|
      %tr
        %td= image_tag pokeca.image.url width: "100px", alt: "", id: "", class: "img-thumbnail"
        %td= pokeca.name
        %td= pokeca.detail
        %td= pokeca.price
        %td= pokeca.box.name
        %td= pokeca.genre.name
        %td= pokeca.rare.rarity
        %td= link_to 'Show', pokeca
        %td= link_to 'Edit', edit_pokeca_path(pokeca)
        %td= link_to 'Destroy', pokeca, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Pokeca', new_pokeca_path
